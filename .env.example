# Fantasy Football Analysis Configuration
# Copy this file to .env and customize the values for your league

# Database Configuration
DATABASE_PATH=fantasy_football.db
DATABASE_TIMEOUT=30

# ESPN League Configuration
ESPN_LEAGUE_ID=730477
ESPN_SEASON=2015
ESPN_TEAM_ID=10

# ESPN Authentication (Optional - for private leagues)
# You can find these in your browser's developer tools when logged into ESPN
# ESPN_SWID={YOUR-SWID-HERE}
# ESPN_S2=YOUR_ESPN_S2_COOKIE_HERE

# Data Files
TEAMS_FILE=teams.json
DRAFT_HISTORY_FILE=draft_history.json
PLAYERS_CACHE_FILE=players_data.json

# Output Configuration
OUTPUT_DIR=analysis_output
SAVE_PLOTS=true
PLOT_DPI=300

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# API Settings
API_RATE_LIMIT_DELAY=1.0
API_TIMEOUT=30

# Analysis Settings
FORCE_PLAYER_REFRESH=false
ANALYSIS_CACHE_TTL=3600

# ESPN API Headers (Advanced - only change if needed)
# ESPN_USER_AGENT=Mozilla/5.0 (Macintosh; Intel Mac OS X 10.15; rv:139.0) Gecko/20100101 Firefox/139.0